<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/padding_medium"
              android:paddingRight="@dimen/padding_medium"
              android:orientation="horizontal"
              android:gravity="center"
              android:weightSum="7"
              android:background="@null"
              android:clickable="false"
              xmlns:autofit="http://schemas.android.com/apk/res-auto"
              android:focusable="false">
    <fragments.views.TextIcon
        android:id="@+id/singleRowFontDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:button="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="30sp"
        autofit:ColorOff="@color/colorRed"
        autofit:ColorOn="@color/colorWhite"
        autofit:TextOff="@string/Icon_delete"
        autofit:TextOn="@string/Icon_delete"
        autofit:isradio="true"
        />
    <TextView
        android:id="@+id/singlerowfonttext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:gravity="center"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:maxLines="2"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/singleRowFontTextID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:focusable="false"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textColor="@color/text_primary_light"/>
</LinearLayout>
