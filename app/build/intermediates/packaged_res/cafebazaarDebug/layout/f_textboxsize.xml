<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_divider_background"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <fragments.views.TextIcon
            android:id="@+id/textBgColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/padding_medium"
            android:text="@string/Icon_palette"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon  android:padding="@dimen/padding_medium"
            android:id="@+id/eyeTextBox"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@null"
            android:button="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30sp"
            autofit:ColorOff="@color/colorAccent"
            autofit:ColorOn="@color/colorWhite"
            autofit:TextOff="@string/Icon_eye"
            autofit:TextOn="@string/Icon_eye_off"
            autofit:isradio="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"

        >

        <fragments.views.TextIcon
            android:id="@+id/textBgX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_arrow_right"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <SeekBar
            android:id="@+id/textBgSeekX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="5"
            android:max="300"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/textBgSeekXText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/text_secondary_light"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"

        >

        <fragments.views.TextIcon
            android:id="@+id/textBgY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_arrow_down"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <SeekBar
            android:id="@+id/textBgSeekY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="5"
            android:max="300"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/textBgSeekYText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/text_secondary_light"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"

        >

        <fragments.views.TextIcon
            android:id="@+id/textBgAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_arrow_expand_all"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <SeekBar
            android:id="@+id/textBgSeekAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="5"
            android:max="300"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/textBgSeekAllText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/text_secondary_light"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"

        >

        <fragments.views.TextIcon
            android:id="@+id/textBgCorner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_rounded_corner"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <SeekBar
            android:id="@+id/textBgSeekCorner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="5"
            android:max="150"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/textBgSeekCornerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/text_secondary_light"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
