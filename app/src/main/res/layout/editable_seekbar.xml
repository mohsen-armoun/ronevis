<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/esbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/esbTitle">
        <fragments.views.gregacucnik.ESB_EditText
            android:id="@+id/esbEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:inputType="numberSigned"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            android:imeOptions="actionDone"
            android:text="44"/>
        <SeekBar
            android:id="@+id/esbSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/esbEditText"
            android:layout_toStartOf="@+id/esbEditText"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_alignParentLeft="true"
            android:max="100"/>
    </RelativeLayout>
</RelativeLayout>
