<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:autofit="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bottom_divider_background"
              android:clickable="true"
              android:gravity="center|top"
              android:orientation="vertical"
              android:paddingBottom="@dimen/padding_large"
              android:paddingTop="@dimen/padding_large"
              android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7">

        <fragments.views.TextIcon
            android:id="@+id/btnarrup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/Icon_arrow_up_bold"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnarrdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/Icon_arrow_down_bold"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnarrleft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_arrow_left_bold"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnarrright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_arrow_right_bold"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <EditText
            android:id="@+id/PNedit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/text_secondary_light"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7">

        <fragments.views.TextIcon
            android:id="@+id/btnToTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/Icon_format_vertical_align_top"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnToBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/Icon_format_vertical_align_bottom"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnToCenterV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_format_vertical_align_center"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnToCenterH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_format_horizontal_align_center"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnToLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_format_horizontal_align_left"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>

        <fragments.views.TextIcon
            android:id="@+id/btnToRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Icon_format_horizontal_align_right"
            android:textColor="@color/text_secondary_light"
            android:textSize="30sp"
            autofit:isradio="false"/>
    </LinearLayout>
</LinearLayout>
