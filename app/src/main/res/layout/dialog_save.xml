<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/padding_large"
              android:paddingRight="@dimen/padding_large"
              android:orientation="vertical"
              android:background="@null"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/saveinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:inputType="text"
            android:hint=""/>
    </com.google.android.material.textfield.TextInputLayout>
    <RadioGroup
        android:id="@+id/radio_group_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:background="@null">
        <RadioButton
            android:id="@+id/radio_webp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@null"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/dsFileFormatWEBP"/>
        <RadioButton
            android:id="@+id/radio_png"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/dsFileFormatPNG"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:background="@null"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/dsFileFormat"/>
    </RadioGroup>
</LinearLayout>
